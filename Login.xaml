<Page x:Class="BanAdmin.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BanAdmin"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="Black">
        <TextBox HorizontalAlignment="Right" Margin="0,69,72,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" FontSize="16" Name ="Input_Username"/>
        <TextBox HorizontalAlignment="Right" Margin="0,105,72,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" FontSize="16" Name ="Input_Password"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,69,210,0" Text="Username" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Green" FontWeight="Bold" FontSize="16"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,106,214,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Green" FontWeight="Bold" FontSize="16"/>
        <Button Content="Log in" HorizontalAlignment="Right" Margin="0,158,143,0" VerticalAlignment="Top" Height="25" Width="49" FontWeight="Bold" Click="AttemptLogin"/>

    </Grid>
</Page>
